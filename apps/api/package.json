{
  "name": "simpleszap-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "npx prisma generate --schema=../../prisma/schema.prisma",
    "build": "npx prisma generate --schema=../../prisma/schema.prisma && npx prisma db push --schema=../../prisma/schema.prisma && tsc",
    "db:push": "npx prisma db push --schema=../../prisma/schema.prisma",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "stripe": "^14.19.0",
    "svix": "^1.20.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.20",
    "prisma": "^5.22.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
