generator client {
  provider = "prisma-client-js"
  output   = "../apps/api/node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String   @id @default(uuid())
  clerkId           String   @unique
  email             String   @unique
  name              String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  subscriptionPlanId String?
  subscriptionPlan   SubscriptionPlan? @relation(fields: [subscriptionPlanId], references: [id])
  
  instances         Instance[]
  apiKeys           ApiKey[]
  dailyUsages       DailyUsage[]
}

model SubscriptionPlan {
  id                String   @id // 'free', 'basic', 'pro', 'enterprise'
  name              String
  description       String?
  priceMonthly      Decimal  @db.Decimal(10, 2) @default(0)
  priceAnnual       Decimal  @db.Decimal(10, 2) @default(0)
  
  // Limits
  messagesPerDay    Int      @default(100)
  instancesLimit    Int      @default(1)
  
  // Features
  hasWebhooks       Boolean  @default(false)
  hasTemplates      Boolean  @default(false)
  hasSmsIncluded    Boolean  @default(false)
  
  // Payment
  asaasId           String? // ID do produto no Asaas
  
  isActive          Boolean  @default(true)
  displayOrder      Int      @default(0)
  
  users             User[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("subscription_plans")
}

model Instance {
  id                String   @id @default(uuid())
  name              String
  status            String   @default("disconnected") // disconnected, connecting, connected
  serverUrl         String?  // URL da Evolution API para esta instancia (se multi-server)
  token             String?  // Token da Evolution API
  orgId             String?
  
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ApiKey {
  id                String   @id @default(uuid())
  key               String   @unique
  name              String?
  orgId             String?
  scopes            String?
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  
  createdAt         DateTime @default(now())
  expiresAt         DateTime?
}

model DailyUsage {
  id        String   @id @default(uuid())
  orgId     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @db.Date // Store only the date part
  count     Int      @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@map("daily_usages")
}

model WebhookConfig {
  id        String   @id @default(uuid())
  orgId     String
  url       String
  events    String   // JSON array of event names
  secret    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WebhookLog {
  id         String   @id @default(uuid())
  orgId      String
  webhookId  String
  event      String
  payload    String
  success    Boolean
  statusCode Int?
  error      String?
  createdAt  DateTime @default(now())
}

model Campaign {
  id          String   @id @default(uuid())
  orgId       String
  name        String
  instanceId  String
  templateId  String?
  segmentTags String?  // JSON array of tags
  scheduledAt DateTime?
  status      String   @default("draft") // draft, scheduled, running, done
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  orgId     String
  actorId   String?
  action    String
  data      String?
  createdAt DateTime @default(now())
}
model Message {
  id          String   @id @default(uuid())
  orgId       String
  instanceId  String
  to          String
  body        String
  type        String   @default("text") // text, image, audio, document
  status      String   @default("queued") // queued, sent, delivered, failed
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Template {
  id        String   @id @default(uuid())
  orgId     String
  name      String
  body      String
  variables String?  // JSON array of variable names
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  orgId     String
  name      String?
  phone     String   @unique
  tags      String?  // JSON array of strings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
